<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Texte principal centré -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textSize="30sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/roomButtonsLayout"
        android:layout_marginBottom="16dp" />

    <!-- GridLayout centré verticalement -->
    <GridLayout
        android:id="@+id/roomButtonsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toTopOf="@id/infoLayout"
        android:layout_marginVertical="16dp">

        <!-- Boutons de la grille -->
        <Button
            android:id="@+id/room1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01" />
        <Button
            android:id="@+id/room2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02" />
        <Button
            android:id="@+id/room3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03" />
        <Button
            android:id="@+id/room4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04" />
        <Button
            android:id="@+id/room5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05" />
        <Button
            android:id="@+id/room6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="06" />
        <Button
            android:id="@+id/room7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07" />
        <Button
            android:id="@+id/room8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08" />
        <Button
            android:id="@+id/room9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09" />
        <Button
            android:id="@+id/room10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10" />
        <Button
            android:id="@+id/room11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11" />
        <Button
            android:id="@+id/room12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12" />
        <Button
            android:id="@+id/room13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13" />
        <Button
            android:id="@+id/room14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14" />
        <Button
            android:id="@+id/room15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15" />
        <Button
            android:id="@+id/room16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16" />
    </GridLayout>

    <!-- Layout des informations centré -->
    <LinearLayout
        android:id="@+id/infoLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/roomButtonsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/unexploredRoomsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unexploredRooms"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/unexploredRooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <TextView
                android:id="@+id/playerPowerLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pPower"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/playerPower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <TextView
                android:id="@+id/playerHealthLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pHealth"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/playerHealth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
